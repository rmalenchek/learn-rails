<% content_for :title do %>Good Apollo<% end %>
<% content_for :description do %>Where dreams take wing..<% end %>
<section>
  <img src="http://lorempixel.com/1170/600/sports/1/">
</section>
<section>
  <div class="column">
    <h3>Swing for the Fences.</h3>
  </div>
  <div class="column">
    <div class="form-centered">
      <%= simple_form_for @visitor do |f| %>
        <%= f.error_notification %>
        <%= f.input :email, label: false, :placeholder => 'Your email address...' %>
        <br/>
        <%= f.button :submit, "Sign up for the newsletter", :class => "submit" %>
      <% end %>
    </div>
  </div>
</section>